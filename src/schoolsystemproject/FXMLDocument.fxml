<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="200" prefWidth="320" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="schoolsystemproject.FXMLDocumentController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="320.0">
         <children>
            <Label alignment="TOP_LEFT" text="School System">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="TOP_CENTER" prefHeight="114.0" prefWidth="320.0">
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="140.0" prefWidth="106.0">
                     <children>
                        <Label text="Courses" textAlignment="CENTER">
                           <padding>
                              <Insets bottom="10.0" top="10.0" />
                           </padding>
                           <font>
                              <Font name="System Italic" size="12.0" />
                           </font>
                        </Label>
                        <Button fx:id="addCourse" mnemonicParsing="false" onAction="#switchToCourseAdd" text="Add Courses">
                           <font>
                              <Font size="11.0" />
                           </font></Button>
                        <Button fx:id="viewCourses" mnemonicParsing="false" onAction="#switchToCourseView" text="View Courses">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" prefHeight="140.0" prefWidth="106.0">
                     <children>
                        <Label alignment="TOP_CENTER" text="Professors">
                           <padding>
                              <Insets bottom="10.0" top="10.0" />
                           </padding>
                           <font>
                              <Font name="System Italic" size="12.0" />
                           </font>
                        </Label>
                        <Button fx:id="addProfessor" mnemonicParsing="false" onAction="#switchToProfessorAdd" text="Add Profs">
                           <font>
                              <Font size="11.0" />
                           </font></Button>
                        <Button fx:id="viewProfessors" mnemonicParsing="false" onAction="#switchToProfessorView" text="View Profs">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" prefHeight="140.0" prefWidth="106.0">
                     <children>
                        <Label alignment="TOP_LEFT" text="Students">
                           <padding>
                              <Insets bottom="10.0" top="10.0" />
                           </padding>
                           <font>
                              <Font name="System Italic" size="12.0" />
                           </font>
                        </Label>
                        <Button fx:id="addStudent" mnemonicParsing="false" onAction="#switchToStudentAdd" text="Add Students">
                           <font>
                              <Font size="11.0" />
                           </font></Button>
                        <Button fx:id="viewStudents" mnemonicParsing="false" onAction="#switchToStudentView" text="View Students">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="schoolsystemproject.ProfessorAddController">
   <children>
      <HBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label text="Professor List" />
                  <ListView fx:id="professorList" prefHeight="280.0" prefWidth="200.0">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="20.0" />
                     </VBox.margin>
                  </ListView>
                  <Button fx:id="removeProfessor" mnemonicParsing="false" onAction="#removeProfessor" text="Remove">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label text="Add Professor" />
                  <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="200.0">
                     <children>
                        <Label text="Name: ">
                           <HBox.margin>
                              <Insets right="7.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="name" prefHeight="25.0" prefWidth="145.0">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </TextField>
                     </children>
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="200.0">
                     <children>
                        <Label text="DoB: ">
                           <HBox.margin>
                              <Insets right="14.0" />
                           </HBox.margin>
                        </Label>
                        <DatePicker fx:id="dob" prefHeight="25.0" prefWidth="145.0">
                           <HBox.margin>
                              <Insets left="2.0" />
                           </HBox.margin>
                        </DatePicker>
                     </children>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="200.0">
                     <children>
                        <Label prefWidth="44.0" text="EduLvl: " />
                        <TextField fx:id="edulvl" prefHeight="25.0" prefWidth="145.0">
                           <padding>
                              <Insets right="3.0" />
                           </padding>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="200.0">
                     <children>
                        <Label text="Dpt:">
                           <HBox.margin>
                              <Insets right="22.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="dpt" prefHeight="25.0" prefWidth="145.0" />
                     </children>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="200.0">
                     <children>
                        <Label text="ID: ">
                           <HBox.margin>
                              <Insets right="27.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="finalID" prefHeight="25.0" prefWidth="145.0" />
                     </children>
                  </HBox>
                  <Button fx:id="addProfessor" mnemonicParsing="false" onAction="#addProfessor" text="Add">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label text="Courses Available" />
                  <ListView fx:id="coursesAvailable" prefHeight="280.0" prefWidth="200.0">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="20.0" />
                     </VBox.margin>
                  </ListView>
                  <HBox alignment="CENTER" prefHeight="63.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="addCourse" mnemonicParsing="false" onAction="#addCourseToProfessor" text="Add">
                           <HBox.margin>
                              <Insets right="50.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="back" mnemonicParsing="false" onAction="#returnToMain" text="Return" />
                     </children>
                  </HBox>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <BorderPane prefHeight="200.0" prefWidth="200.0" />
   </children>
</AnchorPane>

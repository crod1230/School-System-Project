<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="schoolsystemproject.CourseViewController">
   <children>
      <HBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="300.0">
               <children>
                  <Label text="Course List">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <ListView fx:id="courseListView" prefHeight="250.0" prefWidth="270.0">
                     <VBox.margin>
                        <Insets left="20.0" right="10.0" top="20.0" />
                     </VBox.margin>
                  </ListView>
                  <Button fx:id="viewDetails" mnemonicParsing="false" onAction="#setFields" text="View Details">
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
                  <Label fx:id="selectCourse" text="**Please Select a Course**" textFill="#db3232">
                     <font>
                        <Font name="System Italic" size="12.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="290.0">
               <children>
                  <Label text="Course Details">
                     <padding>
                        <Insets bottom="20.0" top="20.0" />
                     </padding>
                  </Label>
                  <HBox alignment="TOP_CENTER" prefHeight="13.0" prefWidth="290.0">
                     <children>
                        <Label text="Name: ">
                           <padding>
                              <Insets right="12.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="courseName" editable="false" prefHeight="25.0" prefWidth="185.0" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="25.0" prefWidth="290.0">
                     <children>
                        <Label text="Subject: ">
                           <padding>
                              <Insets right="5.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="courseSubject" editable="false" prefHeight="25.0" prefWidth="186.0">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </TextField>
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="25.0" prefWidth="290.0">
                     <children>
                        <Label text="Number: " />
                        <TextField fx:id="courseNumber" editable="false" prefHeight="25.0" prefWidth="184.0" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="25.0" prefWidth="290.0">
                     <children>
                        <Label text="Credit: ">
                           <padding>
                              <Insets right="12.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="courseCredit" editable="false" prefHeight="25.0" prefWidth="184.0" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <Button fx:id="back" mnemonicParsing="false" onAction="#returnToMain" text="Return">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="schoolsystemproject.CourseAddController">
   <children>
      <HBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="290.0">
               <children>
                  <Label text="Course List">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font></Label>
                  <ListView fx:id="courseList" prefHeight="250.0" prefWidth="270.0">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="20.0" />
                     </VBox.margin>
                  </ListView>
                  <Button fx:id="removeCourse" mnemonicParsing="false" onAction="#removeCourse" text="Remove Course">
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
                  <Label fx:id="selectCourse" text="**Please Select a Course**" textFill="#db2b2b">
                     <font>
                        <Font name="System Italic" size="12.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="290.0">
               <children>
                  <Label text="Add Course">
                     <padding>
                        <Insets bottom="20.0" top="20.0" />
                     </padding>
                  </Label>
                  <HBox alignment="TOP_CENTER" prefHeight="13.0" prefWidth="290.0">
                     <children>
                        <Label text="Name: ">
                           <padding>
                              <Insets right="12.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="addName" prefHeight="25.0" prefWidth="185.0" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="40.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="25.0" prefWidth="290.0">
                     <children>
                        <Label text="Subject: ">
                           <padding>
                              <Insets right="5.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="addSubject" prefHeight="25.0" prefWidth="186.0">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </TextField>
                     </children>
                     <VBox.margin>
                        <Insets bottom="40.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="25.0" prefWidth="290.0">
                     <children>
                        <Label text="Number: " />
                        <TextField fx:id="addNumber" prefHeight="25.0" prefWidth="184.0" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="40.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="25.0" prefWidth="290.0">
                     <children>
                        <Label text="Credit: ">
                           <padding>
                              <Insets right="12.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="addCredit" prefHeight="25.0" prefWidth="184.0" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="38.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="38.0" prefWidth="290.0">
                     <children>
                        <Button fx:id="addCourse" mnemonicParsing="false" onAction="#addCourse" text="Add">
                           <font>
                              <Font size="13.0" />
                           </font>
                           <HBox.margin>
                              <Insets right="60.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="back" mnemonicParsing="false" onAction="#returnToMain" text="Return">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <Label fx:id="enterFields" text="**Please Enter All Fields**" textFill="#db3636">
                     <font>
                        <Font name="System Italic" size="12.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
